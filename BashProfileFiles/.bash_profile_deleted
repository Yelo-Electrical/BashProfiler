#Starting Services
alias bp="repop && command cd BashProfiler"
alias e=echo "bash profile_delete"
alias gop="cd c:/go"
alias gp="git push -u origin $1"
alias hf="cd ~/Dev/Repositories/HoneyfrostFinancialSystem"
alias hfbe="hf && cd be"
alias i=echo "bash profile_deleted i"
alias la="ls -a"
alias refresh="source ~/.bash_profile && clear"
alias repop="cd ~/Dev/Repositories"
alias show="explorer ."
alias sql="mysql -u root -p -h 127.0.0.1 -P 3306"
alias yelo="cd /c/Users/Dell\ XPS/Dev/Repositories/YeloElectrical"
alias yelo="cd ~/Dev/Repositories/YeloElectrical/BE"
cd () {
	command cd "$1"
	clear
	
	CURRENT=`pwd`
	echo -e "\033[36mCurrently in: \033[35m $CURRENT"
	echo
	
	ls
	echo
}
checknew() {
	git checkout -b $1
}
genp() {
	toscripts $1
	bash genProto.sh
}
mergesquash() {
	checknew "$1Merge"
	git merge --squash "$1"
	git add .
	git commit
	check master
	git merge "$1Merge"
	git branch -D "$1Merge"
}
runc () {
	toscripts $1
	bash runClient.sh
}
runs () {
	toscripts $1
	bash runServer.sh
}
t () {
	toscripts $1
	cd ../pkg/service/v1
	go test
}
toscripts () {
	cmd=$1
	
	case $cmd in
	'hfbe')
	hfbe
	;;
	'yelo')
	yelo
	;;
	esac
	
	cd bashscripts
}
